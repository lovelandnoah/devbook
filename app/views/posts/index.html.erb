<h1>Post(s)</h1>
<% @posts.each do |post| %>
	<h4>This is a Post by: <%= post.user.full_name %></h4>
	
	<p><%= post.content %></p>
	<br />
	<%= link_to 'View Post', post_path(post) %> |
	<%= link_to 'Edit Post', edit_post_path(post, user_id: post.user_id) %>
	<br />
<% end %>
	<br />

<% @users.each do |user| %>
	<%= link_to "Create a New Post as #{user.first_name}", new_post_path(user_id: user.id) %>
	<br />
<% end %> 

	